<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:theme="@style/CardView.WeatherDay">

    <ImageView
        android:id="@+id/view_holder_day__icon"
        android:layout_width="90dp"
        android:layout_height="90dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_weather_icon_thunder" />

    <TextView
        android:id="@+id/view_holder_day__day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Fri"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/view_holder_day__icon"
        app:layout_constraintEnd_toEndOf="@+id/view_holder_day__icon"
        app:layout_constraintStart_toStartOf="@+id/view_holder_day__icon" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@id/view_holder_day__temperature"
        app:layout_constraintStart_toStartOf="@+id/view_holder_day__icon"
        app:layout_constraintTop_toBottomOf="@+id/view_holder_day__icon"
        app:srcCompat="@drawable/ic_weather_icon_temperature" />

    <TextView
        android:id="@+id/view_holder_day__temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24Â°"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintEnd_toEndOf="@+id/view_holder_day__icon"
        app:layout_constraintStart_toEndOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/imageView8" />

</androidx.constraintlayout.widget.ConstraintLayout>