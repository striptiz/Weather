<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:theme="@style/CardView.WeatherDay">

    <ImageView
        android:id="@+id/view_holder_day__icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/ic_weather_thunder"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="@id/view_holder_day__day"
        app:layout_constraintBottom_toBottomOf="@id/view_holder_day__day"
        app:layout_constraintStart_toEndOf="@id/view_holder_day__day"/>

    <TextView
        android:id="@+id/view_holder_day__desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/view_holder_day__icon"
        app:layout_constraintStart_toEndOf="@id/view_holder_day__icon"
        app:layout_constraintEnd_toEndOf="@id/view_holder_day__temperature"
        android:text="DEBUG" />

    <TextView
        android:id="@+id/view_holder_day__day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fri"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="42dp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/view_holder_day__icon"
        app:layout_constraintTop_toTopOf="@id/view_holder_day__icon"
        app:srcCompat="@drawable/ic_weather_icon_temperature" />

    <TextView
        android:id="@+id/view_holder_day__temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24Â°"
        app:layout_constraintStart_toEndOf="@id/imageView8"
        app:layout_constraintTop_toTopOf="@id/imageView8"
        app:layout_constraintBottom_toBottomOf="@id/imageView8"
        android:textSize="40sp" />

</androidx.constraintlayout.widget.ConstraintLayout>